<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }} // {{ site.title }}</title>
        <link rel="canonical" href="{{ url | url(true) }}">
        <meta name="description" content="{{ description or areaDescription or site.description }}"/>
        <link rel="stylesheet" href="/main.css">
        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    </head>
    <body>
        <!-- Page: Header -->
        {% include "sitenav.njk" %}
        <!-- Page: Content -->
        <main class="page">
            <section class="hero [ region fullwidth ]">
                <div class="hero__content flow">
                    <h1>{{ header.title | safe }}</h1>
                    <p>{{ header.intro |> md }}</p>
                </div>
            </section>
            <section class="[ row fullwidth ]">
                <div>
                    {% comp "Player" %}{% endcomp %}
                </div>
            </section>
            <section class="about [ region row fullwidth ]">
                <div class="auto-grid" data-layout="halfs">
                    <div class="about__content flow">
                        <h2>{{ about.title | safe }}</h2>
                        <p>{{ about.description }}</p>
                        <a href="/about" class="button primary">Lees meer</a>
                    </div>
                    <div class="about__image">
                        <img src="{{ about.image | url }}" alt="">
                    </div>
                </div>
            </section>
        </main>
        <!-- Page: Footer -->
        <footer class="[ footer ] [ region row fullwidth ]">
            <div>
                <p>&copy; copyright 2023 Radio Rosita</p>
            </div>
        </footer>
        <script type="module" src="/js/main.js"></script>
        <script>
            if (window.netlifyIdentity) {
                window.netlifyIdentity.on("init", user => {
                    if (!user) {
                        window.netlifyIdentity.on("login", () => {
                            document.location.href = "/admin/";
                        });
                    }
                });
            }
        </script>
    </body>
</html>