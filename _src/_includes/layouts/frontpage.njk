<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }} // {{ site.title }}</title>
        <link rel="canonical" href="{{ url | url(true) }}">

        <meta name="description" content="{{ description or areaDescription or site.description }}" />

        <link rel="stylesheet" href="/main.css">

        <style>
            @media(prefers-color-scheme: dark) {
                .site-nav__link {
                    --clr-link: var(--clr-surface);
                }

                .hamburger-menu {
                    --foreground: var(--clr-surface);
                }

                .navbar.has-background .site-nav__link ,
                .navbar.active .site-nav__link  {
                    --clr-link: var(--clr-text);
                }

                .navbar.has-background .hamburger-menu,
                .navbar.active .hamburger-menu {
                    --foreground: var(--clr-text);
                }

                .site-nav.active  site-nav__link {
                    --clr-link: var(--clr-text);
                }
            }
        </style>

        <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    </head>
    <body>
        <!-- Page: Header -->
        {% include "sitenav.njk" %}
        <!-- Page: Content -->
        <main class="page">
            {{ content | safe }}
        </main>
        <!-- Page: Footer -->
        <footer class="footer [ region row fullwidth ]">
            <div>
                <p>&copy; copyright 2023 Radio Rosita</p>
            </div>
        </footer>
        <script type="module" src="/js/main.js"></script>
        <script>
            if (window.netlifyIdentity) {
                window.netlifyIdentity.on("init", user => {
                    if (!user) {
                        window.netlifyIdentity.on("login", () => {
                            document.location.href = "/admin/";
                        });
                    }
                });
            }
        </script>
    </body>
</html>