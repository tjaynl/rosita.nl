{% for post in posts %}
<article class="card">
    <a href="{{ post.data.url | url }}">
        <header class="card-header">
            <img src="{{ post.data.cover_image | url }}" alt="Post Cover Image" class="card-header-image"/>
        </header>
        <div class="card-body flow">
            <div class="metadata">
                {{ post.data.categorie }}
                <span class="color-neutral-400">{{ post.data.date | date('MY_FORMAT') }}</span>
            </div>
            <h3 class="heading">{{ post.data.title }}</h3>
        </div>
    </a>
</article>
{% endfor %}